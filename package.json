{
  "name": "firebase-authentication-example",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:api": "npx jest app/api/ --config app/api/jest.config.ts",
    "test:services": "npx jest services/ --config services/jest.config.ts",
    "test:client": "npx jest",
    "test": "npm run test:api && npm run test:services && npm run test:client"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shaylin/firebase-authentication-example.git"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.0.13",
    "@mui/material": "^5.16.6",
    "firebase": "^10.12.5",
    "firebase-admin": "^12.3.0",
    "install": "^0.13.0",
    "next": "14.2.5",
    "npm": "^10.8.2",
    "react": "^18",
    "react-dom": "^18",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/npm": "^12.0.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/validator": "^13.12.0",
    "aws-sdk-client-mock-jest": "^4.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "sass": "^1.77.8",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
